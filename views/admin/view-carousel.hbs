<section>
    <div class="view-product container pt-5">
        <div class="admin-button m-4">
            <a href="add-carousel-image" class="btn btn-success btn-lg mt-5">Add Image</a>
        </div>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each image}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.Name}}</td>
                    <td><img src="/carousel-images/{{this._id}}.jpg" alt="" style="height: 50px;" id="carousel-image"></td>
                    <td>
                        <a href="/admin/delete-carousel-image/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}? ')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>