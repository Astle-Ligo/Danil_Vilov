<section>
    <div class="view-product container pt-5">
        <div class="admin-button m-4">
            <a href="admin/add-product" class="btn btn-success btn-lg mt-5">Add Product</a>
        </div>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Selling Price</th>
                    <th scope="col">Actual Price</th>
                    <th scope="col">Discount%</th>
                    <th scope="col">Image</th>
                    <th scope="col">Discription</th>                    
                    <th scope="col">Link</th>
                    <th scope="col">Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.sellingPrice}}</td>
                    <td>{{this.actualPrice}}</td>
                    <td>{{this.discount}}%</td>
                    <td><img src="/product-images/{{this._id}}.jpg" alt="" style="height: 70px;" id="product-image"></td>
                    <td><textarea name="" id="" cols="15" rows="3">{{this.discription}}</textarea></td>
                    <td><a href="{{this.link}}" class="btn btn-info">Link</a></td>
                    <td>{{this.status}}</td>
                    <td class="table-buttons">
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary buttons">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger buttons" onclick="return confirm('Do you want to delete {{this.Name}}? ')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>